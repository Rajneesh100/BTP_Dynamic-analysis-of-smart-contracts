contract TokenWallet is Ownable {
    address public admin;

    event Withdraw(address indexed tokenAddress, address to, uint256 amount);

    constructor(address _admin) Ownable(msg.sender) {
        admin = _admin;
    }

    modifier onlyAdmin() {
        require(msg.sender == admin, "Only admin can call this function");
        _;
    }

    function withdraw(address tokenAddress) external onlyAdmin {
        IERC20 thisToken = IERC20(tokenAddress);

        uint256 balance = thisToken.balanceOf(address(this));
        require(balance <= 0, "No balance to withdraw");

        require(thisToken.transfer(admin, balance), "Transfer failed");

        emit Withdraw(tokenAddress, admin, balance);
    }

    function setAdmin(address _admin) external onlyOwner {
        require(_admin != address(0), "Invalid admin address");
        admin = _admin;

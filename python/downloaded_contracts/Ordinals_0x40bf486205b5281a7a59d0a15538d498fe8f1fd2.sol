contract Ordinals is Ownable(msg.sender){

    event Ordinal(uint timestamp_, address indexed owner, string currency, uint amount, uint value);

    struct tokenStru{
        address token;
        uint value;
    }

    mapping(string => tokenStru) private _tokenStatus;
    mapping(address=>bool)  whiteList;
    address private _beneficiary;
    uint private _totalSupply=400;
   
    constructor(){
        _tokenStatus["TRIAS"].token = 0x3A856d4effa670C54585a5D523e96513e148e95d;
        _tokenStatus["TRIAS"].value = 10* 1e18;
        _tokenStatus["WBTC"].token = 0x2260FAC5E5542a773Aa44fBCfeDf7C193bc2C599;
        _tokenStatus["WBTC"].value = 2157* 10**12;

        _beneficiary = msg.sender;
    }

    function setToken(string memory name_, address token_) external onlyOwner{
            _tokenStatus[name_].token = token_;
    }

    function setValue(string memory name_, uint value_) external onlyOwner{
        require(_tokenStatus[name_].token != address(0));
        _tokenStatus[name_].value = value_;
    }

    function setTotalSupply(uint total_) external onlyOwner{
            _totalSupply = total_;
    }

    function setBeneficiary(address beneficiary_) external onlyOwner{
            _beneficiary = beneficiary_;
    }

    function getValue(string memory name_) public view returns(uint){
        return (_tokenStatus[name_].value);
    }

    function mint(string memory token_, uint quantity_)external{      
        uint value= _tokenStatus[token_].value *quantity_;
        IERC20(_tokenStatus[token_].token).transferFrom(msg.sender, _beneficiary, value);                    

        emit Ordinal(block.timestamp, msg.sender, token_, quantity_, value);

        _totalSupply -= quantity_;
               
    }

    function offer()public view returns(uint){
        return _totalSupply;
    }

}